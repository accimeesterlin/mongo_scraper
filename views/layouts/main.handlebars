        #articles {
            display: inline-block;
            overflow: auto;
            /* width: 70%; */
            height: 700px;
        }

        #notes {
            float: right;
            width: 30%;
        }

        textarea,
        input {
            display: block;
            width: 100%;
            background-color: #FCF5C7;
        }

        input {
            height: 36px;
            font-size: 24px;
        }

        textarea {
            height: 200px;
            font-size: 18px;
        }

        #articles > div {
            border: 1px solid #efe8ed;
            padding: 20px;
            margin: 20px;
            box-shadow: 5px 5px 5px 5px rgba(0, 0, 0, 0.5);
            border-radius: 4px;
            animation: fadeIn 500ms ease-in-out;
        }


        @keyframes fadeIn {
            0% {
                transform: scale(0.1)
            }

            100% {
                transform: scale(1)
            }
        }
    </style>
</head>

